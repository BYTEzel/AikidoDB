<Page
    x:Class="AikidoTrainingDatabase.Infrastructure.View.ViewCreateLoadDb"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Load or create a new database" Style="{StaticResource TitleBox}" Grid.Row="0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
            <Button x:Name="ButtonMenuNew" Style="{StaticResource ButtonMenuNew}" Click="ButtonNewDatabase_Click"/>
            <Button x:Name="ButtonSearchDatabase" Style="{StaticResource ButtonIcon}" Content="&#xE094;" Click="ButtonSearchDatabase_Click"/>
            <TextBox x:Name="TextBoxDatabasePath" Width="1000" Height="50" TextAlignment="Left" VerticalAlignment = "Center" Padding="12" IsReadOnly="True" Text="{x:Bind PathDb, Mode=OneWay}" Margin="20,0,0,0"/>
            <Button x:Name="ButtonLoadDatabase" Style="{StaticResource ButtonIcon}" Content="&#xE111;" Click="ButtonLoadDatabase_Click"/>
        </StackPanel>
    </Grid>
</Page>
